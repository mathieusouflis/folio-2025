{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URI",
    "DATABASE_DEV_URI",
    "PAYLOAD_SECRET",
    "NODE_ENV",
    "BLOB_NEXT_READ_WRITE_TOKEN",
    "BUCKET_ENDPOINT",
    "BUCKET_ACCESS_KEY_ID",
    "BUCKET_SECRET_ACCESS_KEY",
    "BUCKET_NAME"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URI",
        "DATABASE_DEV_URI",
        "PAYLOAD_SECRET",
        "NODE_ENV",
        "BLOB_NEXT_READ_WRITE_TOKEN",
        "BUCKET_ENDPOINT",
        "BUCKET_ACCESS_KEY_ID",
        "BUCKET_SECRET_ACCESS_KEY",
        "BUCKET_NAME"
      ]
    },
    "start": {
      "dependsOn": ["^start"],
      "with": ["build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URI",
        "DATABASE_DEV_URI",
        "PAYLOAD_SECRET",
        "NODE_ENV",
        "BLOB_NEXT_READ_WRITE_TOKEN",
        "BUCKET_ENDPOINT",
        "BUCKET_ACCESS_KEY_ID",
        "BUCKET_SECRET_ACCESS_KEY",
        "BUCKET_NAME"
      ]
    }
  }
}
