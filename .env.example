# Environment Configuration
# Set to "true" for local/development environment, "false" or remove for production
NEXT_PUBLIC_LOCAL_ENVIRONEMENT="true"

# Database Configuration
# Production database URL (used when NEXT_PUBLIC_LOCAL_ENVIRONEMENT is not "true")
DATABASE_URI="postgresql://user:password@host:5432/production_db"

# Development database URL (used when NEXT_PUBLIC_LOCAL_ENVIRONEMENT="true")
DATABASE_DEV_URI="postgresql://localhost:5432/payload"

# Payload CMS Configuration
# Secret key for Payload CMS (generate a secure random string)
# Generate one with: openssl rand -base64 32
PAYLOAD_SECRET="your_payload_secret_key_here"

# S3 Storage Configuration (Only used in production)
# Leave empty for local development
BUCKET_ENDPOINT="https://s3.eu-central-1.amazonaws.com"
BUCKET_ACCESS_KEY_ID=""
BUCKET_SECRET_ACCESS_KEY=""
BUCKET_NAME=""
